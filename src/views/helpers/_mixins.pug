mixin header-section(data)
  header.section-heading
    .section-heading__wrapper
      - if (data.tag == 'h1')
        h1.section-heading__title.title--h1!=data.title
      - else
        h2.section-heading__title.title--h2!=data.title
      if data.link
        a.section-heading__link(href!=data.link aria-label!=data.name)
          span!=data.name
    if data.description
      .section-heading__description!=data.description

mixin sales-item(data)
  .sales-item
    a(href!=data.link aria-label!=data.title)
      picture
        source(srcset="img/new-collections/" + data.img + ".webp" type="image/webp")
        source(srcset="img/new-collections/" + data.img + ".png" type="image/png")
        img.sales-item__image(src="img/new-collections/" + data.img + ".jpg" alt!=data.title)
    .sales-item__wrapper
      h3.sales-item__title!=data.title
      button.sales-item__button.btn.btn--white(type="button")!=data.btnText

