-
  subcategories = ["Подкатегория первая", "Вторая подкатегория", "Подкатегория третья", "Четвертая подкатегория"]
  subcategories_radio = ["Все размеры", "15 см", "20 см", "75 см"]

.page__sidebar
  form#mse2_filters(action='{$_modx->resource.id | url}' method='post')
    .page-category__filters
      .page-category__menu
        a.sidebar-filter__item(href="") 
          .sidebar-filter__item-icon 
            img(src="img/svg/star.svg", alt="")
          .sidebar-filter__item-title Новинки плитки
        .sidebar-filter__item 
          .sidebar-filter__dropdown 
            .sidebar-filter__item-icon 
              img(src="img/svg/eye.svg", alt="")
            .sidebar-filter__dropdown-title Популярная плитка
            .sidebar-filter__dropdown-body
              .sidebar-filter__dropdown-category Плмика для ванной
              each subcategory in subcategories 
                .sidebar-filter__dropdown-subcategory= subcategory
          .sidebar-filter__dropdown 
            .sidebar-filter__dropdown-body
              .sidebar-filter__dropdown-category Плмика на кухню
              each subcategory in subcategories 
                .sidebar-filter__dropdown-subcategory= subcategory
          .sidebar-filter__dropdown 
            .sidebar-filter__dropdown-body
              .sidebar-filter__dropdown-category Плитка в корридор
              each subcategory in subcategories 
                .sidebar-filter__dropdown-subcategory= subcategory
          .sidebar-filter__dropdown 
            .sidebar-filter__dropdown-body
              .sidebar-filter__dropdown-category Мозаика
              each subcategory in subcategories 
                .sidebar-filter__dropdown-subcategory= subcategory
        .sidebar-filter__item 
          .sidebar-filter__show
            .sidebar-filter__show-text Показавать только в наличии
            input.sidebar-filter__show-input(type="checkbox")
            .sidebar-filter__show-btn
        .sidebar-filter__item 
          .sidebar-filter__item-title Показавать только в наличии
          .sidebar-filter__price 
            .sidebar-filter__price-range 
            .sidebar-filter__price-inputs 
              .sidebar-filter__price-min
                input(type="number") 
              .sidebar-filter__price-max
                input(type="number") 
        .sidebar-filter__item
          .sidebar-filter__dropdown 
            .sidebar-filter__dropdown-title Размер
            .sidebar-filter__dropdown-body
              .sidebar-filter__dropdown-category Мозаика
              each subcategory_radio in subcategories_radio 
                input.sidebar-filter__dropdown-input(type="radio" name="size")
                .sidebar-filter__dropdown-btn
                .sidebar-filter__dropdown-subcategory= subcategory
        .sidebar-filter__item
          .sidebar-filter__dropdown 
            .sidebar-filter__dropdown-title Бренды
        .sidebar-filter__item
          .sidebar-filter__dropdown 
            .sidebar-filter__dropdown-title Страны (?)
    .sidebar-filter__marketing
      .sidebar-filter__marketing-title Сезонная распродажа остатков топовой коллекции 
      a.sidebar-filter__marketing-btn.btn.btn--white(href="") Адрес на карте
