secton.section.company-shares
  .l-default
    .section__wrapper
      +header-section({
        title: "Акции от производителей",
        name: "Смотреть всё",
        link: "#"
      })
      .swiper-container.company-shares__slider
        .swiper-wrapper
          each slide in shares
            .swiper-slide.product-item__slide
              .product-item(itemtype='http://schema.org/Product' itemscope='')
                meta(itemprop='description' content='')
                meta(itemprop='name' content='')
                form.product-item__wrapper(method='post')
                  input(type='hidden' name='id' value='')
                  input(type='hidden' name='count' value='1')
                  input(type='hidden' name='options' value='[]')
                  a.product-item__image-wrap(href=slide.link aria-label=slide.title)
                    picture
                      source(srcset="img/products/" + slide.img + ".webp" type="image/webp")
                      source(srcset="img/products/" + slide.img + ".png" type="image/png")
                      img.product-item__image(src="img/products/" + slide.img + ".jpg" alt=slide.title)
                  - if (slide.label)
                    .product-item__badge=slide.label
                  .product-item__info(itemtype='http://schema.org/AggregateOffer' itemprop='offers' itemscope='')
                    meta(itemprop='category' content='')
                    meta(itemprop='name' content='')
                    meta(itemprop='offerCount' content='')
                    meta(itemprop='price' content='')
                    meta(itemprop='lowPrice' content='')
                    meta(itemprop='priceCurrency' content='RUR')
                    .product-item__info-top
                      h3.product-item__title=slide.title
                    .product-item__info-bottom
                      .product-item__price-block
                        .product-item__price-old 920 ₽
                        .product-item__price
                          | 1 180 ₽
                          span / м
                            sup 2
                      button.product-item__btn(type='submit' name='ms2_action' value='cart/add')
                        +svgMono("ic-cart")
        .swiper-button-prev.company-shares__slider-button__prev
        .swiper-button-next.company-shares__slider-button__next